<script>
    (function ($, undefined) {
        $.getScript('http://passport.baidu.com/passApi/js/wrapper.js?cdnversion=' + new Date().getTime(), function () {
            function initTab(loginInstance, tabDom) {
                tabDom.children('li').each(function (index) {
                    $(this).click(function (event) {
                        event.preventDefault();
                        tabDom.children('li').removeClass('tab-selected');
                        $(this).addClass('tab-selected');
                        loginInstance.switchTo(['normal', 'phone'][index]);
                    });
                });
            }

            passport.use('login', {
                tangram: true
            }, function (apiMagic) {
                //实例化登录api
                var loginInstance = new apiMagic.passport.login({
                    product: 'LBC',
                    staticPage: 'http://nlbc.baidu.com/lbs-lbc/login/v3Jump.html',
                    u: 'http:\/\/nlbc.baidu.com\/lbs-lbc\/index.action?from=map',
                    charset: '',
                    memberPass: true,
                    safeFlag: 0
                });
                //渲染表单
                $('#LBC_pass_login_form').html('');
                loginInstance.render('LBC_pass_login_form');
                initTab(loginInstance, $('#LBC_pass_login_form').prevAll('ul.login-tab'));

                $('.tang-pass-login .pass-fgtpwd').remove().appendTo($('.pass-form-item-memberPass'));
                $('.pass-form-item-memberPass label').html("记住我");
                var TANGRAM__PSP_1__memberPassWrapper = $('.pass-form-item-memberPass').remove();
                var TANGRAM__PSP_1__submitWrapper = $('.pass-form-item-submit').remove();
                var form = $('#LBC_pass_login_form form');
                TANGRAM__PSP_1__submitWrapper.appendTo(form);
                TANGRAM__PSP_1__memberPassWrapper.appendTo(form);
                $('.tang-pass-login .pass-button-submit').val('登  录')
            });
        });
    })(window.jQuery);
</script>
<script>
    //bind the click event handler of "登录本地商户中心" button
    $(document).ready(function(){
        $('#junpToLogin').on('click', function(){
            $('#LBC_pass_login_form').find('input[name="userName"]').focus();
        });
    });


    var bindPictureUpload = function(button){
        var tiperror = $('.rt-upload .tip-error');
        var interval;
        new AjaxUpload(button, {
            action: '/lbs-lbc/poi/uploadImage.action',
            name: 'image',
            onSubmit : function(file, ext){
                if (ext && /^(jpg|png|jpeg|gif)$/i.test(ext)){
                    this.setData({
                        'info': '文件类型为图片'
                    });
                } else {
                    tiperror.html('非图片类型文件，请重传');
                    return false;
                }
                //只允许上传一张图片
                this.disable();
                tiperror.text('文件上传中');
                interval = window.setInterval(function(){
                    var text = tiperror.text();
                    if (text.length < 14){
                        tiperror.text(text + '.');
                    } else {
                        tiperror.text('文件上传中');
                    }
                }, 200);
            },
            onComplete: function(file, response){
                var that = this;
                var data = $.parseJSON($($.parseHTML(response)[0]).html());
                setTimeout(function(){
                    if(data.errno == 1 || data.code != 200){
                        util.alert({
                            message: data.message
                        });
                    }else  if(data.code == 200 && data.data != ""){
                        $('span[class="tip-text tip-intro"]').html(
                                '<a href="' + data.data.url + '" target="_blank">' + file + '</a>' +
                                '<input type="hidden" id="userReportPictureId" value="' + data.data.id + '"/>'
                        );
                    }
                    tiperror.text('');
                    button.text('重新上传');
                    window.clearInterval(interval);
                    that.enable();
                }, 2000);

            }
        });
    };
    $('#a_opinion').on('click', function () {
        $('#opinion-form')[0].reset();
        $('#opinion-form .tip-error').html("");
        $('#opinion-form .upload').html("上传图片");
        $('span[class="tip-text tip-intro"]').html('');
        bindPictureUpload($('#opinion-form .upload'));
        var scrollTop = $(window).scrollTop() || $('body').scrollTop;
        $('#opinion-dialog')
                .removeClass('hide')
                .css({
                    "top": scrollTop + 100 + 'px'
                });
    });
    $('#opinion-dialog .close').on('click', function () {
        $('#opinion-dialog').addClass('hide');
    });
    $('#opinion-dialog .subBtn').on('click', function () {
        var $title = $('#poi-title'),
                $detail = $('#detail');
        if (!$.trim($title.val())) {
            $('.tip-error', $title.parent()).html('请填写标题');
            return false;
        }
        if (!$.trim($detail.val())) {
            $('.tip-error', $detail.parent()).html('请填写描述');
            return false;
        }

        //if the image is uploading,return
        if($('.rt-upload .tip-error').text().indexOf("上传") > 0){
            return false;
        }

        var pictureId = $('#userReportPictureId').val();
        if(pictureId == 'undefined'){
            pictureId = null;
        }

        var sendData = {'userReport.title': $title.val(),
            'userReport.type': $('input:radio[name="opi-radio"]:checked').val() - 0,
            'userReport.pictureStr': pictureId,
            'userReport.content': $detail.val(),
            'userReport.contact': $('#poi-contact').val()};
        $.ajax({
            url: '/lbs-lbc/user/report/add.action',
            type: 'POST',
            data: sendData,
            async: true,
            dataType: 'json',
            traditional: true,
            success: function(data, status){
                $('#opinion-dialog .close').click();
                var scrollTop = $(window).scrollTop() || $('body').scrollTop;
                $('#reportSubmitResult > .point-title').text('感谢您的反馈');
                $('#reportSubmitResult')
                        .removeClass('hide')
                        .css({"top": scrollTop + 100 + 'px', 'width':'400px', 'display':'block'})
                        .fadeOut(3000);
            },
            error: function(){
                $('#opinion-dialog .close').click();
                var scrollTop = $(window).scrollTop() || $('body').scrollTop;
                $('#reportSubmitResult > .point-title').text('意见反馈提交失败');
                $('#reportSubmitResult')
                        .removeClass('hide')
                        .css({"top": scrollTop + 100 + 'px', 'width':'400px', 'display':'block'})
                        .fadeOut(3000);
            }
        });
    });
    $('#poi-title').on('blur', function () {
        var $this = $(this),
                $tip = $('.tip-error', $this.parent());
        $tip.html("");
        if (!$.trim($this.val())) {
            $tip.html("请填写标题");
        }
    });
    $('#detail').on('blur', function () {
        var $this = $(this),
                $tip = $('.tip-error', $this.parent());
        $tip.html("");
        if (!$.trim($this.val())) {
            $tip.html("请填写描述");
        }
    })
    var $placeholder = $('#detail-placeholder'),
        $detail = $('#detail'),
        $poi_contact = $('#poi-contact'),
        $poi_contact_placeholder = $('#poi-contact-placeholder');
    if (!$.support.leadingWhitespace) {

        $detail.hide();
        $poi_contact.hide();
        $placeholder.focus(function () {
            $placeholder.hide();
            $detail.show().focus();
        });
        $detail.blur(function () {
            if ($detail.val() == "") {
                $detail.hide();
                $placeholder.show();
            }
        });
        $poi_contact_placeholder.focus(function(){
            $poi_contact_placeholder.hide();
            $poi_contact.show().focus();
        });
        $poi_contact.blur(function () {
            if ($poi_contact.val() == "") {
                $poi_contact.hide();
                $poi_contact_placeholder.show();
            }
        });
    } else {
        $placeholder.hide();
        $detail.show();
        $poi_contact_placeholder.hide();
        $poi_contact.show();
    }
  	//图片轮播
    var carouselImg = {
        init: function(){
            this.$arrayImg = $("#img-view .carousel-img");
            this.$queueImg = $.makeArray(this.$arrayImg);
            this.$arrayCircle = $(".circle-view li");
            this.$queueCircle = $.makeArray(this.$arrayCircle);
            this.bindEvent();
            this.$queueImg.push(this.$queueImg.shift());
            this.$queueCircle.push(this.$queueCircle.shift());
            this.interval();
        },
        bindEvent: function(){
            $(".circle-view").delegate('li.circle-blur', "click", $.proxy(this.fnC_circle, this));
        },
        start: function(){
            this.$arrayImg.fadeOut();
            var img = this.$queueImg.shift();
            $(img).fadeIn();
            this.$queueImg.push(img);
            //按钮
            this.$arrayCircle.removeClass();
            this.$arrayCircle.addClass("circle-blur");
            var circle = this.$queueCircle.shift();
            $(circle).removeClass("circle-blur");
            $(circle).addClass("circle-focus");
            this.$queueCircle.push(circle);
        },
        stop: function(){
            clearInterval(this.img_interval)
        },
        interval: function(){
            this.img_interval = setInterval($.proxy(this.start, this), 5000);
        },
        fnC_circle: function(e){
            this.stop();
            var $this = $(e.target),
                $index = parseInt($this.attr("index")),
                forLength = this.$arrayImg.length,
                forIndex = $index;

            this.$queueImg = [];
            this.$queueCircle = [];
            for(var i = 0; i < forLength; i++){
                if(forIndex >= forLength){
                    forIndex = 0;
                }
                this.$queueImg.push(this.$arrayImg[forIndex]);
                this.$queueCircle.push(this.$arrayCircle[forIndex]);
                forIndex ++;
            }
            this.start();
            this.interval();
        }
    };
    carouselImg.init();
</script>
